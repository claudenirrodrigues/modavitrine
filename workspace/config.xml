<?xml version='1.0' encoding='utf-8'?>
<widget id="com.vitrine.app" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Vitrine</name>
    <description>O App da Moda Vitrine veio para auxiliar seus
		Representantes no processo e gerenciamente de suas vendas.
	</description>
    <author email="contato@modavitrine.com.br" href="http://www.modavitrine.com.br">
		Moda Vitrine - Thym  
	</author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="www/res/icon/ldpi.png" />
        <icon density="mdpi" src="www/res/icon/mdpi.png" />
        <icon density="hdpi" src="www/res/icon/hdpi.png" />
        <icon density="xhdpi" src="www/res/icon/xhdpi.png" />
        <icon density="xxhdpi" src="www/res/icon/xxhdpi.png" />
        <icon density="xxxhdpi" src="www/res/icon/xxxhdpi.png" />
        <splash density="land-hdpi" src="www/res/screen/hdpi_landscape.png" />
        <splash density="land-ldpi" src="www/res/screen/ldpi_landscape.png" />
        <splash density="land-mdpi" src="www/res/screen/mdpi_landscape.png" />
        <splash density="land-xhdpi" src="www/res/screen/xhdpi_landscape.png" />
        <splash density="port-hdpi" src="www/res/screen/hdpi_portrait.png" />
        <splash density="port-ldpi" src="www/res/screen/ldpi_portrait.png" />
        <splash density="port-mdpi" src="www/res/screen/mdpi_portrait.png" />
        <splash density="port-xhdpi" src="www/res/screen/xhdpi_portrait.png" />
        <preference name="SplashScreenDelay" value="3000" />
        <preference name="SplashScreenBackgroundColor" value="#5B2633" />
        <preference name="ShowSplashScreen" value="false" />
        <preference name="FadeSplashScreen" value="false" />
        <preference name="FadeSplashScreenDuration" value="3000" />
        <preference name="ShowSplashScreenSpinner" value="true" />
        <preference name="SplashMaintainAspectRatio" value="true" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="5.2.2" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.5.0" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.0" />
</widget>
